<a href='/admin/users'>Users</a>
<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <form action="/admin/users/{{this.id}}?_method=PUT" method="POST"></form>
      <th scope="row">{{this.id}}</th>
      <td>{{this.email}}</td>
      <td>
        {{#if this.isAdmin}}
          admin
        {{else}}
          user
        {{/if}}
      </td>
      <td>
        {{#if this.isAdmin}}
          <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" style="display: inline;">
            <input type="hidden" name="isAdmin" value="true">
            <button type="submit" class="btn btn-link">set as user</button>
          </form>
        {{else}}
          <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" style="display: inline;" name="isAdmin">
            <input type="hidden" name="isAdmin" value="false">
            <button type="submit" class="btn btn-link">set as admin</button>
          </form>
        {{/if}}
      </td>
      </form>
    </tr>
    {{/each}}
  </tbody>
</table>